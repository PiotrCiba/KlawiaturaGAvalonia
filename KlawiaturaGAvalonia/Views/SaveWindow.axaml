<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:KlawiaturaGAvalonia.ViewModels"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="150"
        x:Class="KlawiaturaGAvalonia.Views.SaveWindow"
        x:DataType="viewModels:MainWindowViewModel"
        Title="SaveWindow" Width="300" Height="100">
    <Window.Styles>
        <Style Selector="Border.bb">
            <Setter Property="BorderBrush" Value="{Binding BorderColour}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="2"/>
            <Setter Property="Margin" Value="1.5,1.5,1.5,1.5"/>
        </Style>
    </Window.Styles>
    
    <Border Classes="bb">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button HorizontalAlignment="Center" Command="{Binding SaveCSV}">Plik .csv</Button>
            <Button HorizontalAlignment="Center" Command="{Binding CreateAhScript}">Skrypt AH</Button>
        </StackPanel>
    </Border>
</Window>
